<h1>Listing events</h1>

<table>
  <tr>
    <th>Event name</th>
    <th>Event game title</th>
    <th>Event description</th>
    <th>Event location</th>
    <th>Event active</th>
    <th>Event date</th>
    <th>Event type</th>
    <th>Event zipcode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.event_name %></td>
    <td><%= event.event_game_title %></td>
    <td><%= event.event_description %></td>
    <td><%= event.event_location %></td>
    <td><%= event.event_active %></td>
    <td><%= event.event_date %></td>
    <td><%= event.event_type_id %></td>
    <td><%= event.event_zipcode %></td>
    <!-- # CR this looks very generator-ey -->
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Join', add_user_event_path(event.id), method: :post %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

